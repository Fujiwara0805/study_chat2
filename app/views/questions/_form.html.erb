<%= form_with model: @question_form, url: url, method: method, id: 'new_question', local: true do |f| %>
  <div class='input-items'>
    <div class='input-items__title'>
      <%= f.text_field :title, placeholder: "タイトル" %>
    </div>
    <div class='input-items__content'>
      <%= f.text_area :content, placeholder: "質問内容" %>
    </div>
    <div class='input-items__name'>
      <%= f.text_field :name, placeholder: "投稿者名" %>
    </div>
    <div class="tag-field">
      <%= f.text_field :tag_name, placeholder: 'add tags' %>
    </div>
    <div class='input-items__submit'>
      <%= f.submit 'POST'%>
    </div>
  </div>
<% end %>